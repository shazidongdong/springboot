<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hm.mapper.UserMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.hm.entity.User">
		<id column="id" property="id" />
		<result column="username" property="username" />
		<result column="realname" property="realname" />
		<result column="password" property="password" />
		<result column="tel" property="tel" />
		<result column="email" property="email" />
		<result column="createTime" property="createTime" />
		<result column="updateTime" property="updateTime" />
		<result column="status" property="status" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		id, username, realname, password, tel, email, createTime, updateTime,
		status
	</sql>
	
	<resultMap type="com.hm.entity.User" id="userRoleList" extends="BaseResultMap">
		<collection property="roles" ofType="com.hm.entity.Role">
			<id property="id" column="r_id"  javaType="java.lang.Integer"/>
			<result property="name" column="name"/>
		</collection>
	</resultMap>
	
	<select id="getALLUserAndRole" resultMap="userRoleList">
		select u.*,r.id r_id ,r.name  from
		t_user u left join user_role ur on u.id = ur.user_id
		left join t_role r
		on r.id = ur.role_id;
	</select>
	
	
</mapper>
